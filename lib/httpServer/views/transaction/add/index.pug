extends ../../layout.pug

block content
    section.section
        .container
            .level
                .level-left
                    h2.title.is-3 Transaction
            hr
            .hero-body
                .container.has-text-centered
                    .columns
                        .column.is-half.is-offset-one-quarter
                            form.form(action= walletid, method='post')
                                .field
                                    .control.has-icons-left.has-icons-right
                                        input.input.is-large(id='toAddress', type='text', name='toAddress', placeholder='Receivers Public Key')
                                .field
                                    .control.has-icons-left.has-icons-right
                                        input.input.is-large(id='amount', type='text', name='amount', placeholder='Amount to be sent')
                                .field
                                    p.control
                                        button.button.is-success(type='submit')
                                            | Submit