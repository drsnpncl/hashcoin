extends ../../layout.pug

block content
    section.section
        .container
            .level
                .level-left
                    h2.title.is-3 Wallet
            hr
            .hero-body
                .container.has-text-centered
                    .columns
                        .column.is-half.is-offset-one-quarter
                            .card
                                .card-content
                                    p.title
                                        | Wallet Created Successfully!
                                    p.subtitle
                                        | Wallet Id: #{wallet.id}
                            .card
                                .card-content
                                    form.form(name="makeadd" , id="makeadd", action= formAction, method="post")
                                        .field
                                            .control.has-icons-left.has-icons-right
                                                input.input.is-large(id='password', type='password', name='password', placeholder='Confirm Password')
                                        .field
                                            p.control
                                                button.button.is-success(type='submit')
                                                    | Submit