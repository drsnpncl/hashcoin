doctype html
html(lang='en')
  head
    title Send HashCoins | HashWallet
    meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0', name='viewport')
    link(rel='stylesheet', type='text/css', href='font/flaticon.css')
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/material-kit.css', rel='stylesheet')
  body.signup-page
    nav.navbar.navbar-transparent.navbar-absolute
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navigation-example')
            span.flaticon-menu-button
          a.navbar-brand
            h3 HashWallet
        #navigation-example.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(href='')
                span.flaticon-circle-with-check-symbol  Home 
    .wrapper
      .header.header-filter(style="background-image: url('/img/city.jpg'); background-size: cover; background-position: top center;")
        .container
          .row
            .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
              .card.card-signup
                form.form(method='', action='')
                  .header.header-success.text-center
                    h4 Send HashCoins
                  .content.col-md-10.col-md-offset-1
                    .text-center
                      input#pubkey.form-control.text-center(type='text', placeholder='Enter Your Public Key..')
                    .text-center
                      input.form-control.text-center(type='text', placeholder='Enter Amount To Send..')
                    .text-center
                      input#prikey.form-control.text-center(type='text', placeholder='Enter Your Private Key..')
                  .footer.text-center
                    a.btn.btn-simple.btn-success.btn-lg(onclick='create') Send
  script(src='/js/jquery.min.js', type='text/javascript')
  script(src='/js/bootstrap.min.js', type='text/javascript')
  script(src='/js/material.min.js')
  script(src='/js/bootstrap-datepicker.js', type='text/javascript')
  script(src='/js/material-kit.js', type='text/javascript')
